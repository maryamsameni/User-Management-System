<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Edit <%= editCustomer.firstName %> <%= editCustomer.lastName %></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>
</div>

<div class="col row py-3">
    <div class="col d-flex justify-content-between">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                <li class="breadcrumb-item active"><%= editCustomer.firstName %> <%= editCustomer.lastName %></li>
            </ol>
        </nav>
        <div class="text-end fw-lighter">
            <b>userId : <%= editCustomer._id %></b> /
            <b>UpdatedAt : <%= Date.now(editCustomer.UpdatedAt).toString() %></b>
        </div>
    </div>
</div>

<form action="/edit/<%= editCustomer._id %>?_method=PUT" method="POST">
    <div class="row form-group mb-4">
        <div class="col-6">
            <label for="firstName">first Name</label>
            <input type="text" class="form-control" id="firstName" value="<%= editCustomer.firstName %>" name="firstName" placeholder="first Name" required>
        </div>
        <div class="col-6">
            <label for="lastName">last Name</label>
            <input type="text" class="form-control" id="lastName"  value="<%= editCustomer.lastName %>" name="lastName" placeholder="last Name" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col-6">
            <label for="tel">Telephone</label>
            <input type="text" class="form-control" id="tel" name="tel"  value="<%= editCustomer.tel %>" placeholder="Telephone" required>
        </div>
        <div class="col-6">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="lastName" name="email"  value="<%= editCustomer.email %>" placeholder="Email" required>
        </div>
    </div>

    <div class="form-group mb-4">
        <label for="details">Customer Details</label>
        <textarea class="form-control" name="details" id="details" cols="30" rows="10"
            placeholder="Customer Details .. "><%= editCustomer.details %></textarea>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Customer</button>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Customer</button>
    </div>
</form>

<!-- Modal  -->
<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">You are about a remove customer record.</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
            </div>

            <div class="modal-body">
                <p>
                    This will remove the customer record of <b class="fw-bold"><%= editCustomer.firstName %> <%= editCustomer.lastName %></b><br/>
                    Are you sure?
                  </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">close</button>
                <form action="/delete/<%= editCustomer.id%>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-primary">Yes, Remove Customer</button>
                </form>
            </div>
        </div>
    </div>
</div>